// RESET =======================================================================

*
  font-family Arial, sans-serif

html,
body,
#root
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  margin 0

ul
  margin 0
  padding 0
  list-style-type none

// RESET =======================================================================

// CONSTANTS ===================================================================

$main-theme = #ffa300
$name-font = "Comic Sans MS"
$job-title-font = "Copperplate"

// CONSTANTS ===================================================================

// MAIN ========================================================================

#root
  display flex
  justify-content center
  align-items center

.main-container

  // streched and centered without overflow
  // even with paddings and margins
  position absolute
  top 0
  left 0
  bottom 0
  right 0

  padding 20px
  display grid
  grid-template-columns 1fr 3fr
  grid-auto-rows minmax(min-content, max-content)

  & > header
    grid-column: 1 / -1
    grid-row 1 / auto
    margin-bottom 18px
    padding-bottom 10px
    display flex
    justify-content center
    position relative

  aside
    border-right 2px solid $main-theme
    padding-right 16px

  section
    padding-left 16px

    & > header
      font-weight bold
      font-size 18px
      padding-bottom 8px

.header-title
  display flex
  flex-direction column
  align-items center

  h1, h2
    display inline-block
    margin 0

  h1
    font-family $name-font
    font-size 30px
    padding 10px 23px
    margin-bottom 8px
    border 2px solid $main-theme
    background-color white

  h2
    font-family $job-title-font
    font-size 26px

.stripe
  position absolute
  top 42px
  left 0
  right 0
  bottom 0
  background-color gray
  opacity 0.15
  z-index -1
